@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/addForm.css?v=<%= DateTime.Now.Ticks %" />
<body style="text-align:center">

    <div>
        <br />
        <br />
        <h1 class="title">@ViewData["Title"]</h1>

        <div class="labels">
            <div>
                <form enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>Create a new account.</h4>
                    <hr />
                    <div asp-validation-summary="All"></div>
                    <div>
                        <div>
                            <label asp-for="Input.Username"></label>
                            <div>
                                <input class="boxes" asp-for="Input.Username" />
                                <span asp-validation-for="Input.Username"></span>
                            </div>
                        </div>
                        <div>
                            <label asp-for="Input.Email"></label>
                            <div>
                                <input class="boxes" asp-for="Input.Email" />
                                <span asp-validation-for="Input.Email"></span>
                            </div>
                        </div>
                        <div>
                            <label asp-for="Input.FirstName"></label>
                            <div>
                                <input class="boxes" asp-for="Input.FirstName" />
                                <span asp-validation-for="Input.FirstName"></span>
                            </div>
                        </div>
                        <div>
                            <label asp-for="Input.LastName"></label>
                            <div>
                                <input class="boxes" asp-for="Input.LastName" />
                                <span asp-validation-for="Input.LastName"></span>
                            </div>
                        </div>
                        <div>
                            <label asp-for="Input.PhoneNo"></label>
                            <div>
                                <input class="boxes" asp-for="Input.PhoneNo" />
                                <span asp-validation-for="Input.PhoneNo"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Input.Role" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="boxes" asp-for="Input.Role" class="form-control" />
                                <span asp-validation-for="Input.Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input class="boxes" asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <div class="col-sm-10">
                                <input class="boxes" asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div>
                            <label asp-for="Input.ProfilePicture"></label>
                            <div style="text-align:center">
                                <div>
                                    <input asp-for="Input.ProfilePicture" />
                                    @*<label class="custom-file-label">Choose File...</label>*@
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div >

                <button type="submit" class="buttons" onclick="return confirm('Registered Succesfully!')">Register</button>
            </div>
        </div>

    </div>
</body>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
