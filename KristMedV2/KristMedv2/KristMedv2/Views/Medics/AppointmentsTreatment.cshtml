@model KristMedv2.Models.Medics.MedicAppointmentsTreatmentViewModel
@{
    ViewData["Title"] = "AppointmentsTreatment";
}
<link rel="stylesheet" type="text/css" href="~/css/table.css?v=<%= DateTime.Now.Ticks %" />
<br />
<br />
<br />
<br />
<br />
<h1 class="title">Appointments with Treatment</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Client First Name</th>
            <th>Client Last Name</th>
            <th>Duration(h)</th>
            <th>Date</th>
            <th>Diagnosis</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var appointments in Model.AppointmentsTreatment)
        {
            <tr>
                <td>@appointments.Client.FirstName</td>
                <td>@appointments.Client.LastName</td>
                <td>@appointments.Duration</td>
                <td>@appointments.Date</td>
                <td>@appointments.Treatment.Diagnosis</td>
            </tr>
        }
    </tbody>

</table>

