@using Microsoft.AspNetCore.Identity
@using KristMedv2.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul >
        @if (SignInManager.IsSignedIn(User))
        {
        <div class="buttons1">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index"><img src="@Url.Action("UserPhotos", "Home" )" height="48" width="48" /></a><br />
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </div>

            <div >
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="buttons1">Logout</button>
                </form>
            </div>
        }
        else
        {
    <div >
        <a class="buttons1" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="buttons1" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>

        }
    </ul>
